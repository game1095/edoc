<div class="row">
  <div class="col-lg-6">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>ข้อมูลเพิ่มเติม</h3>
      </div>
      <div class="ibox-content">

        <div class="form-group">
          <div class="label-control">
            <strong>เลขที่รับ</strong>
          </div>
          <div class="label-control">
            <%= @document.number %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>ลงวันที่</strong>
          </div>
          <div class="label-control">
            <%= @document.dated %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>หัวข้อ</strong>
          </div>
          <div class="label-control">
            <%= @document.title %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>รายละเอียด</strong>
          </div>
          <div class="label-control">
            <%= @document.detail %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>แฟ้ม</strong>
          </div>
          <div class="label-control">
            หมายเลข <%= @document.folder_id %> (<%= @document.folder.name %>)
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>ประเภทของเอกสาร</strong>
          </div>
          <div class="label-control">
            <%= @document.type.name %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>ชั้นความลับ</strong>
          </div>
          <div class="label-control">
            <%= @document.confidential.name %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>ผู้เพิ่มเอกสาร</strong>
          </div>
          <div class="label-control">
            <%= @document.user.first_name %>  <%= @document.user.last_name %>
          </div>
        </div>

        <div class="form-group">
          <div class="label-control">
            <strong>สถานะ</strong>
          </div>
          <div class="label-control">
            <%= @document.status %>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>รูปภาพที่แนบ</h3>
      </div>
      <div class="ibox-content">

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>เอกสารที่เกี่ยวข้อง</h3>
      </div>
      <div class="ibox-content">

      </div>
    </div>
  </div>
</div>
