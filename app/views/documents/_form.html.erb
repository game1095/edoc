<%= form_for @document do |form| %>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :เลขที่รับ , class: 'label-control'%>
        <%= form.text_field :number , class:'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :ลงวันที่  , class: 'label-control' %>
        <%= form.date_field :dated , class:'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :หัวข้อ , class: 'label-control' %>
        <%= form.text_field :title ,  class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :แนบไฟล์ , class:'control-label' %>
        <%= form.file_field :images , class: 'form-control' , multiple: true %>
      </div>
      <div class="form-group">
        <%= form.label :รายละเอียด , class: 'label-control' %>
        <%= form.text_area :detail , class: 'form-control' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :ลำดับชั้นความลับ , class:'label-control' %>
        <%= form.collection_select :confidential_id , Confidential.all , :id , :name , {prompt: 'โปรดระบุชั้นความลับ'}  , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :สถานะ , class: 'label-control' %>
        <%= form.collection_select :status_id , Status.all , :id , :name , {prompt: 'โปรดระบุสถานะ'} , class:'form-control' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :ประเภทเอกสาร , class: 'label-control' %>
        <%= form.collection_select :type_ids, Type.all  ,:id , :name,{ prompt: "-"},{ multiple: true, size: 7 , class:'form-control' } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= form.label :หมายเหตุ , class:'label-control' %>
        <%= form.text_area :remark , class:'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit 'บันทึกผล' , class: 'btn btn-primary btn-rounded btn-block' %>
    <%= link_to 'ย้อนกลับ' ,  documents_path , class: 'btn btn-warning btn-rounded btn-block' %>
  </div>
<% end %>
