<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>ข้อมูลเพิ่มเติม</h3>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <div class="label-control">
                <strong>เลขที่รับ</strong>
              </div>
              <div class="label-control">
                <%= @folder.number %>
              </div>
            </div>

            <div class="form-group">
              <div class="label-control">
                <strong>ลงวันที่</strong>
              </div>
              <div class="label-control">
                <%= @folder.name %>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <div class="label-control">
                <strong>หัวข้อ</strong>
              </div>
              <div class="label-control">
                <%= @folder.description %>
              </div>
            </div>

            <div class="form-group">
              <div class="label-control">
                <strong>สร้างเมื่อ</strong>
              </div>
              <div class="label-control">
                <%= @folder.created_at %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>ข้อมูลเอกสารภายในแฟ้ม</h3>
      </div>
      <div class="ibox-content">
        <div class="form-group">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ชื่อเอกสาร</th>
                <th>ลงวันที่</th>
                <th>ประจำแผนก</th>
                <th>ผลการดำเนินการ</th>
              </tr>
            </thead>
            <tbody>
              <% @document_folder.each do |n|  %>
              <tr>
                  <td><%= n.title %></td>
                  <td><%= n.dated %></td>
                  <td><%= n.department_check %></td>
                  <td><%= n.status.name %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
