<div class="row">
  <div class="col-lg-12">
  <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>ส่งออกเอกสาร</h3>

         <!-- Flash Notice -->
        <% if flash[:notice] %>
          <div class="notice alert alert-info alert-dismissable"><%= flash[:notice] %></div>
        <% end %>
      </div>
      <div class="ibox-content">
        <div class="table-responsive">
          <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <!-- <label>
                "ค้นหา:"
                <input type="search" class="form-control input-sm" aria-controls="DataTables_Table_0">
              </label> -->
              <%= link_to 'ส่งออกเอกสาร' , new_sent_path , class:'btn btn-primary dim keep-right' %>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0"
            aria-describedby="DataTables_Table_0_info" role="grid">
            <thead>
              <tr>
                <th>ชื่อเรื่อง</th>
                <th>แผนกปลายทาง</th>
                <th>จัดส่งเมื่อ</th>
              </tr>
            </thead>
            <tbody>
              <% @sents.each do |n| %>
              <tr>
                <td>
                  <% n.document.each do |doc| %>
                    <%= doc.title %> /
                  <% end %>
                </td>
                <td>
                  <% n.department.each do |dpt|  %>
                    <%= dpt.name %>
                  <% end %>
                </td>
                <td><%= n.created_at.strftime("%d %B %Y") %></td>
              </tr>
              <% end %>
            </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
  </div>
</div>
