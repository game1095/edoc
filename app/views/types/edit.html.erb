<%= form_for @type do |form| %>
  <div class="form-group">
    <%= form.label :แก้ไข , class: 'label-control'%>
    <%= form.text_field :name , class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'บันทึกผล' , class: 'btn btn-primary btn-rounded btn-block' %>
    <%= link_to 'ย้อนกลับ' ,  types_path , class: 'btn btn-warning btn-rounded btn-block' %>
  </div>
<% end %>
