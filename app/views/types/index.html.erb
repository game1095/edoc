<div class="row">
  <div class="col-lg-12">
  <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>จัดการประเภทเอกสาร</h3>

        <!-- Flash Notice -->
        <% if flash[:notice] %>
          <div class="notice alert alert-info alert-dismissable"><%= flash[:notice] %></div>
        <% end %>
      </div>
      <div class="ibox-content">
        <div class="table-responsive">
          <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <!-- <label>
                "ค้นหา:"
                <input type="search" class="form-control input-sm" aria-controls="DataTables_Table_0">
              </label> -->
              <%= link_to 'เพิ่มแฟ้ม' , new_type_path , class:'btn btn-primary dim keep-right' %>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0"
            aria-describedby="DataTables_Table_0_info" role="grid">
              <thead>
                <tr>
                  <th>#</th>
                  <th>ชื่อประเภท</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @types.each do |n| %>
                <tr>
                  <td><%= n.id %></td>
                  <td><%= n.name %></td>
                  <td>
                    <%= link_to  edit_type_path(n.id) , class: 'btn btn-success btn-circle' do %>
                      <i class="fa fa-edit" ></i>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
  </div>
</div>
